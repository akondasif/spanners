<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="displaySpannersAction" class="org.dontpanic.spanners.struts.DisplaySpannersAction"
          p:spannersDAO-ref="spannersDAO"/>
    <bean id="spannerDetailAction" class="org.dontpanic.spanners.struts.SpannerDetailAction"
            p:spannersDAO-ref="spannersDAO"/>
    <bean id="createSpannerAction" class="org.dontpanic.spanners.struts.CreateSpannerAction"
            p:spannersDAO-ref="spannersDAO"/>
    <bean id="deleteSpannerAction" class="org.dontpanic.spanners.struts.DeleteSpannerAction"
            p:spannersDAO-ref="spannersDAO"/>
</beans>
